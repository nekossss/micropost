<% if fav_posts %>
  <ul class="media-list">
    <% fav_posts.each do |post| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(post.user, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= post.user.name %>
          </div>
          <div>
            <%= post.content %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(post.user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate fav_posts %>
<% end %>